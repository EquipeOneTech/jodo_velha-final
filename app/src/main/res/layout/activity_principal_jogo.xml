<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalJogo"
    android:background="@color/colorTorquoise">

    <Button
        android:id="@+id/bt00"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="#F8F8FF"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/bt10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voltar" />

    <Button
        android:id="@+id/bt01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:background="#F8F8FF"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/bt11"
        app:layout_constraintEnd_toStartOf="@+id/bt02"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt00"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt02"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="88dp"
        android:background="#F8F8FF"
        android:text=""
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/bt12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt10"
        android:layout_width="100dp"
        android:layout_height="103dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#F8F8FF"
        android:text=""
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/bt20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt00" />

    <Button
        android:id="@+id/bt11"
        android:layout_width="100dp"
        android:layout_height="103dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#F8F8FF"
        android:text=""
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/bt21"
        app:layout_constraintEnd_toStartOf="@+id/bt12"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt10"
        app:layout_constraintTop_toBottomOf="@+id/bt01" />

    <Button
        android:id="@+id/bt12"
        android:layout_width="100dp"
        android:layout_height="103dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="#F8F8FF"
        android:text=""
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/bt22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt02" />

    <Button
        android:id="@+id/bt20"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="72dp"
        android:layout_marginStart="16dp"
        android:background="#F8F8FF"
        android:text=""
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt10" />

    <Button
        android:id="@+id/bt21"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="#F8F8FF"
        android:text=""
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt22"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt20"
        app:layout_constraintTop_toBottomOf="@+id/bt11" />

    <Button
        android:id="@+id/bt22"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="16dp"
        android:background="#F8F8FF"
        android:text=""
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt12" />

    <ImageButton
        android:id="@+id/voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="?android:attr/actionModeCloseDrawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>